<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:andorid="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient_background_register"
    android:theme="@style/ThemeOverlay.Recognize.FullscreenContainer"
    tools:context=".Activities.Register">

    <EditText
        android:id="@+id/email_address_register"
        android:layout_width="312dp"
        android:layout_height="48dp"
        android:background="@drawable/rounded_rectangle"
        android:ems="10"
        android:hint="Enter Email"
        android:inputType="textEmailAddress"
        android:paddingLeft="20dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.248" />

    <EditText
        android:id="@+id/first_name_register"
        android:layout_width="312dp"
        android:layout_height="48dp"
        android:background="@drawable/rounded_rectangle"
        android:ems="10"
        android:hint="First Name"
        android:inputType="textPersonName"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"

        android:paddingLeft="20dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.367" />

    <EditText
        android:id="@+id/last_name_register"
        android:layout_width="312dp"
        android:layout_height="48dp"
        android:background="@drawable/rounded_rectangle"
        android:ems="10"
        android:hint="Last Name"
        android:inputType="textPersonName"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:paddingLeft="20dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.471" />

    <Button
        android:id="@+id/register_button"
        android:layout_width="202dp"
        android:layout_height="51dp"
        android:background="@drawable/rounded_rectangle"
        android:contentDescription="Confirm button, click to register"
        android:text="Confirm"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.944" />

    <EditText
        android:id="@+id/password_register"
        android:layout_width="304dp"
        android:layout_height="48dp"
        android:background="@drawable/rounded_rectangle"
        android:ems="10"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.457"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.582" />

    <TextView
        android:id="@+id/register_error_text_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All fields must be filled!"
        android:textColor="#FF0000"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/register_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_register" />

    <TextView
        android:id="@+id/register_error_text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email address must include an @ sign"
        android:textColor="#FF0000"
        android:visibility="invisible"
        andorid:layout_constraintBottom_toTopOf="@+id/register_button"
        andorid:layout_constraintEnd_toEndOf="parent"
        andorid:layout_constraintStart_toStartOf="parent"
        andorid:layout_constraintTop_toBottomOf="@+id/password_register" />

    <TextView
        android:id="@+id/register_error_text_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email address already exists!"
        android:textColor="#FF0000"
        android:visibility="invisible"
        andorid:layout_constraintBottom_toTopOf="@+id/register_button"
        andorid:layout_constraintEnd_toEndOf="parent"
        andorid:layout_constraintStart_toStartOf="parent"
        andorid:layout_constraintTop_toBottomOf="@+id/password_register" />

    <TextView
        android:id="@+id/register_error_text_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please check the email address input"
        android:textColor="#FF0000"
        android:visibility="invisible"
        andorid:layout_constraintBottom_toTopOf="@+id/register_button"
        andorid:layout_constraintEnd_toEndOf="parent"
        andorid:layout_constraintStart_toStartOf="parent"
        andorid:layout_constraintTop_toBottomOf="@+id/password_register" />


</androidx.constraintlayout.widget.ConstraintLayout>